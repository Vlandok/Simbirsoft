<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:minHeight="@dimen/item_search_min_height">

    <TextView
        android:id="@+id/textViewTitleSearchNko"
        style="@style/TextViewTitleSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/imageViewGreyLineNko"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="One Day" />

    <ImageView
        android:id="@+id/imageViewGreyLineNko"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grey_line_height"
        android:layout_marginStart="@dimen/grey_line_margin_start"
        android:src="@drawable/rectangle_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewFullGreyLineNko"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grey_line_height"
        android:src="@drawable/rectangle_grey"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>