<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewChooseCategoryHelp"
        style="@style/TextViewChooseCategoryHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/tv_choose_category_help_margin_top"
        android:text="@string/choose_category_help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include"
        tools:text="Выберите категорию помощи" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewChooseCategoryHelp"
        style="@style/RecyclerViewChooseCategoryHelp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rv_choose_category_help_layout_height"
        android:layout_marginEnd="@dimen/rv_choose_category_help_margin_end"
        android:layout_marginTop="@dimen/rv_choose_category_help_margin_top"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@id/include2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChooseCategoryHelp">

    </android.support.v7.widget.RecyclerView>

    <include
        android:id="@+id/include2"
        layout="@layout/bottom_navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewCirclesHeart"
        style="@style/ImageViewCirclesHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/image_view_circles_heart_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
