<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="center">
        <shape android:shape="oval">
            <size
                android:width="@dimen/white_circle_width_height"
                android:height="@dimen/white_circle_width_height" />
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item android:gravity="center">
        <shape android:shape="oval">
            <size
                android:width="@dimen/red_circle_width_height"
                android:height="@dimen/red_circle_width_height" />
            <solid android:color="@color/melon" />
        </shape>
    </item>

    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/heart" />
    </item>


</layer-list>
